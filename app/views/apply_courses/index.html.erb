									<li><%= school_history_course.try(:manager).try(:name) %></li>
									<li><%= school_history_course.applied_date %></li>
								</ul>
							<% end %>
						<% end %>
					<% end %>
					
				<% end %>
			</div>

		</div>
	</div>
</div>