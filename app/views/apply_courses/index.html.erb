<div class="apply">
	<h3>
		<%= image_tag "title-bg.png"%>
		<strong>精品课程申报</strong>
	</h3>
	<div class="apply-tab">

		<!-- Nav tabs -->
		<ul class="nav nav-tabs m-tabs" role="tablist">
			<li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">市级精品课程</a></li>
			<li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">校级精品课程</a></li>
		</ul>

		<!-- Tab panes -->
		<div class="tab-content">
			<div role="tabpanel" class="tab-pane active" id="home">
				<ul class="nav nav-justified apply-nav item text-center text-muted">
					<li>课程名称</li>
					<li>院系</li>
					<li>课程负责人</li>
					<li>教师团队</li>
					<li>申报时间</li>
				</ul>
				<% @apply_courses.each do |apply_course|%>
					<ul class="nav nav-justified item apply-item text-center">
						<li><%= apply_course.name %></li>
						<li><%= apply_course.try(:academy).try(:name) %></li>
						<li><%= apply_course.try(:manager).try(:name) %></li>
						<li>
							<% apply_course.teacher_courses.each do |teacher_course| %>
								<%= teacher_course.try(:teacher).try(:name) %>
							<% end %>
						</li>
						<li><%= apply_course.created_at.to_date.to_s(:db) %></li>
					</ul>
				<% end %>
			</div>
			<div role="tabpanel" class="tab-pane" id="profile">
				<label style="padding-top: 20px;">暂无校级精品课程</label>
			</div>
		</div>

	</div>
</div>