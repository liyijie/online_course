							<%= link_to show_courses_path(school_applied_course.number) do %>
								<ul class="nav nav-justified item apply-item">
									<li><%= school_applied_course.name %></li>
									<li><%= school_applied_course.try(:academy).try(:name) %></li>
									<li><%= school_applied_course.try(:specialty).try(:name) %></li>
									<li><%= school_applied_course.try(:manager).try(:name) %></li>
									<li><%= school_applied_course.applied_date %></li>
								</ul>
							<% end %>
						<% end %>
					<% end %>

				<% end %>
			</div>

			<div role="tabpanel" class="tab-pane" id="city_histroy">
			  <% if @city_applied_courses.empty? %>
				  <label style="padding-top: 20px;">暂无市级精品课程历史记录</label>
				<% else %>
					<ul class="nav nav-justified apply-nav item text-muted">
						<li>课程名称</li>
