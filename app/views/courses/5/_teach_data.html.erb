        var iframe = '<object type="application/pdf" data="'+pdf_link+'" width="100%" height="500">不支持该格式，建议替换为pdf格式</object>'
        $.createModal({
            title:'上海市高职高专院校市级精品课程申报表',
            message: iframe,
            closeButton:true,
            scrollable:false
        });
        return false;
    });
  })
</script>