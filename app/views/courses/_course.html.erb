<div class='single-vedio-content'>
  <div class="vedio-content">
    <div class="image-wrapper">
      <% if course.attachment.present? && course.attachment.file_url.present? %>
      <%= link_to image_tag("course-show.png"), show_courses_path(course.number), class: 'img', style: "height: 192px" if course.attachment%>
     <% else %>
      <%= link_to image_tag(course.attachment.content.url(:c_350_230)), show_courses_path(course.number), class: 'img' if course.attachment%>
    <% end %>
    </div>
    <p class="title"><%= link_to course.name, show_courses_path(course.number) %></p>
    <p class="description">
      <span class="pull-left section">
        <span>该课程一共有<%= course.try(:sub_courses).try(:size)%>课时</span>
      </span>
      <span class="pull-right">
        <span class="glyphicon glyphicon-star"></span>
        <%= course.get_likes(vote_scope: "collect").size %>人收藏
      </span>
    </p>
  </div>
</div>