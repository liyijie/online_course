<%= content_for :script do %>
  <%= javascript_tag do %>
    course_praise_path = "<%= course_praise_courses_path%>"
    course_collect_path = "<%= course_collect_courses_path%>"
  <% end %>
  <%= javascript_include_tag "_course_show", 'data-turbolinks-track' => true %>
<%end%>

<%= content_for :lunbo do %>
  <%= render partial: "/common/lunbo"%>
<%end%>

<% content_for :crumbs do%>
  <ol class="breadcrumb">
    <li><span class="glyphicon glyphicon-home">&nbsp;</span>当前位置</li>
    <li><%= link_to "首页", root_path %></li>
    <li class="active"><%= @course.name %></li>
  </ol>
<% end %>

<div class="main-content">
  <div class="top-content">

    <div class="left-content">
      <div class="course-image">
        <video width="500" height="350" id="player2" poster="" controls="controls" preload="none">
  <!-- MP4 source must come first for iOS -->
  <source type="video/mp4" src="http://7xj8j2.com1.z0.glb.clouddn.com/datangvideo.mp4" />
  <!-- WebM for Firefox 4 and Opera -->
  <source type="video/webm" src="../media/echo-hereweare.webm" />
  <!-- OGG for Firefox 3 -->
  <source type="video/ogg" src="../media/echo-hereweare.ogv" />
  <!-- Fallback flash player for no-HTML5 browsers with JavaScript turned off -->
  <object width="640" height="360" type="application/x-shockwave-flash" data="../build/flashmediaelement.swf">    
    <param name="movie" value="../build/flashmediaelement.swf" /> 
    <param name="flashvars" value="controls=true&amp;file=http://7xj8j2.com1.z0.glb.clouddn.com/datangvideo.mp4" />     
    <!-- Image fall back for non-HTML5 browser with JavaScript turned off and no Flash player installed -->
    <img src="../media/echo-hereweare.jpg" width="640" height="360" alt="Here we are" 
      title="No video playback capabilities" />
  </object>   
</video>
      </div>
      <div class="course-and-score">
        <%= link_to "课后作业", after_class_courses_path, class: "course"%>
        <%= link_to "成绩查询", teacher_signed_in? ? my_score_teachers_path : my_exams_user_index_path, class: "score"%>
      </div>
    </div>

    <div class="right-content">
      <h1><%= @course.name %></h1>
      <% if !teacher_signed_in? %>
        <div class="collect-zan-btns">
          <%= form_tag course_collect_courses_path, method: :post, remote: true, id: "courseCollectPraise" do %>
            <%= hidden_field_tag "course_id", @course.id%>
            <button id="courseCollectBtn" type="button" class="btn btn-default">
              <% collect_count = @course.get_likes(vote_scope: :collect).size %>
              <% is_collect = current_user.present? && (current_user.voted_up_on? @course,vote_scope: :collect) %>
              <span id="collectIcon" class="glyphicon glyphicon-star <%= 'text-muted' if !is_collect %>"></span>
              <span id="collectFont" count="<%= collect_count %>" 
                iscollect = "<%= is_collect %>" >
                <%= collect_count %>
              </span>
            </button>
            <button id="coursePraiseBtn" type="button" class="btn btn-default">
              <% praise_count = @course.get_likes(vote_scope: :praise).size %>
              <% is_praise = current_user.present? && (current_user.voted_up_on? @course,vote_scope: :praise) %>
              <span id="praiseIcon" class="glyphicon glyphicon-heart <%= 'text-muted' if !is_praise %>"></span>
              <span id="praiseFont" count="<%= praise_count %>" 
                ispraise = "<%= is_praise %>" >
                <%= praise_count %>
              </span>
            </button>
          <% end %>
        </div>
      <% end %>
      <ul class="course-main">
        <li class="course-info">
          <span class="title">课程简介</span>
          <div class="content lg-height">
            <p>
              <%= @course.description %>
            </p>
          </div>
          <%= link_to("更多 >>", show_courses_path(@course.number, anchor: "category-list"))%>
        </li>
        <li class="teach-team">
          <p class="title">教学团队</p>
          <div class="teachers">
            <% @teacher_courses.each do |teacher_course|%>
              <div class="teacher-info">

                 <%= link_to image_tag(teacher_course.try(:teacher).try(:image).try(:avatar).url(:t_60)), show_teachers_path(teacher_course.teacher.number) if teacher_course.try(:teacher).try(:image).present? %>
                 <p><%= teacher_course.try(:teacher).try(:name) %></p>

              </div>
            <% end %>
          </div>
        </li>
      </ul>
    </div>
  </div>
  <div class="related-courses">
    <a href="javascript:void(0)" class="btn btn-primary">相关课程</a>
    <ul class="courses-list">
      <%= render partial: "sub_course", locals: {sub_courses: @sub_courses}%>
    </ul>
    <%= link_to "展开", "javascript:void(0)", class: "drop-down-arrow"%>
  </div>
  <% if @course.id == 1 %>
    <%= render "courses/1/main" %>
  <% elsif  @course.id == 2 %>
    <%= render partial: "courses/2/main" %>
  <% end %>
</div>
<script>

$('audio,video').mediaelementplayer({
  //mode: 'shim',
  success: function(player, node) {
    $('#' + node.id + '-mode').html('mode: ' + player.pluginType);
  }
});

</script>