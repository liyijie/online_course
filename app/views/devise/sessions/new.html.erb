<div class="panel-heading" style="background: #ffffff;">
    <ul class="nav nav-pills lead">
      <li class="active">
        <%= link_to('用户登录', new_session_path(resource_name), class: "navbar-link") %>
      </li>
      <li class="navbar-right">
      <%= link_to('免费注册', new_registration_path(resource_name), class: "navbar-link") %>
      </li>
    </ul>
</div>

<div class="panel-body">

  <div id="flash_alert">
    <%= render 'common/login_messages'%>
  </div>


<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :login, wrapper: 'login_input', autofocus: true, placeholder: "请输入用户名或账号" %>
    <%= f.input :password, wrapper: 'password_input', placeholder: "请输入密码" %>

    <div class="checkbox">
      <%= f.input :remember_me, label: "记住密码",wrapper: 'login_boolean' , as: :boolean if devise_mapping.rememberable? %>
      <p class="pull-right"><%= link_to "忘记密码?", "#" %></p>
    </div>
  </div>

  <div class="form-actions">
  <p class="text-center"><%= f.submit "登 录", class: "btn btn-info btn-md btn-100" %></p>
  </div>
<% end %>


</div>
