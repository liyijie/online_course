<div class="row">

  <div class="col-md-2" role="complementary">
	<%= render :partial => "nav_left" %>
  </div>

  <div class="col-md-10">
    <div class="row common-info">
      <%= render :partial => "base_info" %>
	</div>

	<div class="row self-main-context">
	  <ul class="nav nav-tabs">
		<li role="presentation" class="active"><a href="#">个人资料</a></li>
		<li role="presentation"><a href="#">修改密码</a></li>
	  </ul>

	  <div class="container div-form">
		<%= simple_form_for(@user, url: user_path(current_user.id), wrapper: "horizontal_form", html: { method: :put, multipart: true, class: "form-horizontal" }) do |f| %>
		  <%= f.input :nickname %>
		  <%= f.input :image , as: :file, wrapper: "horizontal_file_input"%>
		  <%= f.input :name %>
		  <%= f.input :number %>
		  <%= f.input :position %>
		  <%= f.input :academy_id, collection: [['请选择系别','']] + Academy.all.pluck(:name,:id), as: :select, include_blank: false %>
		  <%= f.input :specialty_id, collection: [['请选择专业','']] + @specialties,as: :select %>
		  <%= f.association :grade, collection: [['请选择班级','']] + @grades, as: :select, include_blank: false %>
		  <%= f.input :phone, required: false %>
		  <%= f.input :gender, collection: User::PartnerGender.to_a.reverse_each{|x| x.reverse!}, as: :radio_buttons, wrapper: "horizontal_radio_and_checkboxes", item_wrapper_class: "radio-inline" %>
		  <%= f.input :signature, as: :text %>

		  <div class="col-sm-5 col-sm-offset-2">
			<p class="text-center">
			  <%= f.submit "确认修改", class: "btn btn-success" %>
			  <input class="btn btn-danger" type="button" value="取消修改">
			</p>
		  </div>
		<% end %>
	  </div>
	</div>
  </div>

</div>

<%= content_for :script do %>
  <%= javascript_tag do %>
    get_specialties_path = "<%= get_specialties_user_index_path %>"
    get_grades_path = "<%= get_grades_user_index_path %>"
  <% end %>
  <%= javascript_include_tag "_user" %>
<% end %>
