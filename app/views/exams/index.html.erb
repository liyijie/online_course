<script type="text/javascript">
  $(function(){
    $("#newCreateBtn").click(function(){
      $("#createDiscuss").modal();
    });

    $(".editExamLink").click(function(){
      $("#createDiscuss").modal();
    });

    $("#examListMenu li").click(function(){
      if($(this).index() < 3){
        $(this).addClass("active").siblings().removeClass("active")
        $(".exams-list").hide();
        $(".exams-list").eq($(this).index()).show();
      }
    });
  });
</script>
