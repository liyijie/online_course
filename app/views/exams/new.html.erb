<%= content_for :script do %>
  <%= javascript_include_tag "jquery.countdown.min" %>
<%end%>

<div class="main-content">
  <a href="javascript:void(0)" class="btn btn-primary">题目列表</a>
  <div class="main-title">
    <%= @sub_course.try(:course).name%>（测试）
  </div>
  <div class="question-content">
    <%= simple_form_for Exam.new do |f|%>
      <%= f.hidden_field :sub_course_number, value: params[:number]%>
      <% @questions.each_with_index do |question, index|%>
        <p class="title"><%= index + 1 %> <%= question.title%></p>
          <% question.options.each do |option|%>
            <p class="option">
              <%= radio_button_tag("option_" + index.to_s, option.index_type)%>
              <span><%= option.index_type %>.  <%= option.name%></span>
            </p>
          <% end %>
        <% end %>
        <div class="col-sm-6 col-md-offset-3">
          <%= f.submit '提交', class: "btn btn-lg btn-primary"%>
        </div>
      <% end %>
  </div>
  <div class="tieshi">
    <div id="countdown"></div>
    <ul class="question-num">
      <li>
        <p class="title">总有单选题</p>
        <p class="number">
          <span><%= @questions.length%></span>
          题
        </p>
      </li>
      <li>
        <p class="title">已答题数</p>
        <p class="number">
          <span class="already-reply-questions">0</span>
          题
        </p>
      </li>
      <li>
        <p class="title">未答题数</p>
        <p class="number">
          <span class="yet-reply-questions">0</span>
          题
        </p>
      </li>
    </ul>
    <a href="javascript:void(0)" id="back-to-top"></a>
  </div>
</div>

<script type="text/javascript">
  $('#countdown').countdown('2015/05/21', function(event) {
    $(this).html(event.strftime('%H:%M:%S'));
  });
  $(function(){
  });
  $(function () {
    $(window).scroll(function(){
      if ($(window).scrollTop()>100){
        $back.fadeIn(500);
      }
      else {
        $back.fadeOut(500);
      }
    });
    $("#back-to-top").click(function(){
      $('body,html').animate({scrollTop:0},1000);
      return false;
    });
  });
</script>