<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title">新建话题</h4>
    </div>
    <div class="modal-body">
      <%= form_for @discuss, url: discusses_path, remote: true, html: {class: "form-horizontal"} do |f| %>
        <div class="form-group">
          <label class="col-sm-2 control-label">标题</label>
          <div class="col-sm-9">
            <%= f.text_field :title, class: "form-control" %>
          </div>
        </div>
        <!-- <div class="form-group">
          <label class="col-sm-2 control-label">系别</label>
          <div class="col-sm-9">
            <%#= select_tag "academy", options_for_select(Academy.all.pluck(:name, :id)), class: "form-control" %>
          </div>
        </div> -->
        <div class="form-group">
          <label class="col-sm-2 control-label">内容</label>
          <div class="col-sm-9">
            <%= f.text_area :body, class: "form-control", rows: 9 %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-4 col-sm-offset-2 text-center">
            <%= f.submit "确认发布", class: "btn btn-info" %>
          </div>
          <div class="col-sm-5 text-center">
            <button class="btn btn-danger" data-dismiss="modal">取消发布</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>