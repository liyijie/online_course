<div class="main-content">
  <section class="common-title">
    <span class="pull-left">新建考试</span>
  </section>
  
  <div class="exams-list container">
    <%= simple_form_for(@paper, url: papers_path(@paper), wrapper: "horizontal_form28", html: { class: "form-horizontal", multipart: true }) do |f| %>
      <%= f.input :course, collection: current_teacher.courses %>
      <%= f.input :name %>
      <%= f.input :content %>
      <%= f.input :start_at, as: :string %>
      <%= f.input :end_at, as: :string %>
      <%= f.input :attachment, as: :file, wrapper: "horizontal_file_input" %>
      <!-- <div class="form-group string optional paper_end_at">
        <label class="string optional col-sm-2 control-label" for="paper_end_at">参考学生</label>
        <div class="col-sm-8">
          <button class="btn btn-default" type="button">添加考试学生</button>
        </div>
      </div> -->
      <div class="col-sm-8 col-sm-offset-1 text-center">
        <%= f.submit "提交", class: "btn btn-success" %>
      </div><br>
    <% end %>
  </div>
</div>
