<div class="container">
  <div class="content">
    <div class="row">
      <div class="login-form">
				<h4 class="text-center">&nbsp;</h4>
				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				  <fieldset>
				    <div class="clearfix">
				      <%= f.input :login, label: '邮箱', required: false, autofocus: true %>
				    </div>
				    <div class="clearfix">
				      <%= f.input :password, label: '密码', required: false %>
				    </div>
				    <%= f.input :remember_me, label: '记住我', as: :boolean if devise_mapping.rememberable? %>
				  </div>
				  <div class="text-center">
				  	<%= f.button :submit, "登录", class: "btn btn-primary" %>
				  </div>
				<% end %>
			</div>
	  </div>
	</div>
</div>