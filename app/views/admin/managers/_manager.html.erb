<tr>
  <td><%= manager.number %></td>
  <td><%= manager.name %></td>
  <td><%= manager.email %></td>
  <td><%= Manager::ListRoles[manager.roles.to_sym] if manager.roles %></td>
  <td>
    <%= link_to [:admin, manager], class: 'btn btn-xs btn-info', title: '查看' do %>
      <span class="glyphicon glyphicon-eye-open"></span>
    <%end%>
    <%= link_to edit_admin_manager_path(manager), class: 'btn btn-xs btn-default', title: '编辑' do %>
      <span class="glyphicon glyphicon-edit"></span>
    <%end%>
    <%= link_to admin_manager_path(manager), data:{ confirm: '确认删除吗?'}, method: :delete, class: 'btn btn-xs btn-danger', title: '删除' do %>
      <span class="glyphicon glyphicon-trash"></span>
    <%end%>
  </td>
</tr>