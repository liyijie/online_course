<%= content_for :script do %>
   <%= javascript_include_tag "_teacher_page" , 'data-turbolinks-track' => false%>
<%end%>

<div class="main-content">
  <%= render "left_bar" %>
  <%= render "teacher_info" %>
  <div class="teacher-content teacher-wrapper">
  	<div class="nav-bar">
  		<%= link_to  "我的提问" , my_questions_teachers_path, class: "btn btn-default" %>
  		<%= link_to  "我的回复", my_answers_teachers_path , class: "btn btn-default by-btn-bg" %>
  	</div>
  	<div class="teacher-info-content teacher-wrapper">
  		<div class="infos">
  		 	<ul class="my-questions">
  		 		<% if @answer_comments.blank? %>
  		 		  <div class="blank-alert">
		          <%= render partial: 'common/blank_alert', locals: {message: '您暂未发起任何回复!'}%>
		        </div>
	        <% else %>
	        	<% @answer_comments.each do |comment| %>
	        		<li>
  	  		 		  <div class="avatar">
  	  		 		  	<%= image_tag comment.try(:usertable).try(:show_image),class: "img-circle" %>
  	  		 		  </div>
  	  		 		  <div class="question-info">
  	  		 		  	<p class="name">
  		  		 		    <%= current_teacher.show_name %>
  		  		 		    <span>回答</span>
  		  		 		  </p>
  		  		 		  <p class="content"><%= link_to comment.body,show_sub_courses_path(comment.try(:commentable).try(:number),course_number: comment.try(:commentable).try(:course).try(:number))%> </p>
  		  		 		  <% if comment.parent.present? %>
                    <p><span class="text-muted">[问题]</span>
                    <span><%= comment.parent.try(:usertable).try(:show_name) %>:<span>
                    <span class="text-muted">
                    <%= link_to comment.parent.body,show_sub_courses_path(comment.try(:commentable).try(:number),course_number: comment.try(:commentable).try(:course).try(:number))%>
                    </span></p>
  		           <% end %>
  		  		 		  <p class="time">时间: <%= comment.created_at.try(:strftime,'%Y-%m-%d %H:%M:%S') %></p>
  	  		 		  </div>
  	  		 		  <div class="answer-broswer">
  	  		 		  	<div class="list bl <%= comment.parent.present? ? "text-success" : "text-muted"%>">
  	  		 		  		<p class="num"><%= comment.parent.children.size %></p>
  	  		 		  		<p class="answer">回答</p>
  	  		 		  	</div>
  	  		 		  	<div class="list">
  	  		 		  		<p class="num">0</p>
  	  		 		  		<p class="answer">浏览</p>
  	  		 		  	</div>
  	  		 		  </div>
  	  		 		</li>
	        	<% end %>
	        <% end %>
  		 	</ul>
  		</div>
  	</div>
  	<div class="paginate text-center">
        <%= paginate @answer_comments %>
    </div>
  </div>
</div>