	  		 		<li>
	  		 		  <div class="avatar">
	  		 		  	<%= image_tag("teacher-avatar.png")%>
	  		 		  </div>
	  		 		  <div class="question-info">
	  		 		  	<p class="name">
		  		 		    <%= current_teacher.phone %>
